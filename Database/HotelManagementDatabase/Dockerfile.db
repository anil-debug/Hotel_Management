# Use the official .NET SDK image to build the app
FROM mcr.microsoft.com/dotnet/sdk:6.0 AS build
WORKDIR /app

# Copy the project file and restore dependencies
COPY HotelManagementDatabase/HotelManagementDatabase.csproj ./HotelManagementDatabase/
RUN dotnet restore HotelManagementDatabase/HotelManagementDatabase.csproj

# Copy the rest of the source code
COPY HotelManagementDatabase/ ./HotelManagementDatabase/
WORKDIR /app/HotelManagementDatabase

# Build the project
RUN dotnet build --configuration Release --output /app/build

# Use the official .NET runtime image to run the app
FROM mcr.microsoft.com/dotnet/aspnet:6.0 AS runtime
WORKDIR /app
COPY --from=build /app/build .
ENTRYPOINT ["dotnet", "HotelManagementDatabase.dll"]
